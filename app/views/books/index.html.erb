<h1>投稿一覧</h1>
<h3>Title</h3>
<h3>Body</h3>
<% @books.each do |book| %>


<span><%= link_to 'show', book_path(book.id) %></span>
<span><%= link_to 'edit' , edit_book_path(book.id) %></span>
<span><%= link_to 'destroy', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></span>
<% end %>

<h2>Books</h2>

<h3>New book</h3>
<%= form_with model: @book, url: '/books' do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Boby</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>